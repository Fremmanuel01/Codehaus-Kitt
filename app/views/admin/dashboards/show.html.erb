<div class="dashboard-container">
  <div class="container-fluid">
    <!-- Header -->
    <div class="welcome-section d-flex justify-content-between align-items-end">
      <div>
        <div class="module-badge mb-3" style="background: #e63946;">
          <i class="bi bi-cpu"></i> Admin Control
        </div>
        <h1>System <span>Overview</span>.</h1>
        <p class="text-muted">Manage platform users, cohorts, and resource mapping.</p>
      </div>
      <div class="d-none d-md-block text-end">
        <p class="mb-1 fw-bold text-danger"><%= Date.today.strftime("%A, %B %d") %></p>
        <span class="badge bg-danger px-3 py-2 rounded-pill">Restricted Access</span>
      </div>
    </div>

    <!-- Management Cards -->
    <div class="row g-4 mb-5">
      <div class="col-md-4">
        <%= link_to admin_cohorts_path, class: "glass-card action-card py-4" do %>
          <div class="action-icon" style="background: rgba(230, 57, 70, 0.1); color: #e63946;">
            <i class="bi bi-building"></i>
          </div>
          <div class="action-content">
            <h3>Cohorts</h3>
            <p>Manage global groups</p>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= link_to admin_users_path, class: "glass-card action-card py-4" do %>
          <div class="action-icon" style="background: rgba(230, 57, 70, 0.1); color: #e63946;">
            <i class="bi bi-people"></i>
          </div>
          <div class="action-content">
            <h3>Users</h3>
            <p>Admin, Staff & Students</p>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= link_to new_admin_enrollment_path, class: "glass-card action-card py-4" do %>
          <div class="action-icon" style="background: rgba(230, 57, 70, 0.1); color: #e63946;">
            <i class="bi bi-link-45deg"></i>
          </div>
          <div class="action-content">
            <h3>Enrollments</h3>
            <p>Map users to cohorts</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- System Stats -->
    <div class="row g-4">
      <div class="col-12">
        <div class="glass-card p-5 text-center">
          <div class="row g-5">
            <div class="col-md-4">
              <div class="stat-value text-danger mb-1"><%= User.count %></div>
              <div class="stat-label">Active Users</div>
            </div>
            <div class="col-md-4">
              <div class="stat-value text-danger mb-1"><%= Cohort.count %></div>
              <div class="stat-label">Total Cohorts</div>
            </div>
            <div class="col-md-4">
              <div class="stat-value text-danger mb-1">99.9%</div>
              <div class="stat-label">System Uptime</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

