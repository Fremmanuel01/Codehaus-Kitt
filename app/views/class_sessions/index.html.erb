<div class="dashboard-container">
  <div class="container-fluid">
    <div class="welcome-section d-flex justify-content-between align-items-end">
      <div>
        <div class="module-badge mb-3">
          <i class="bi bi-calendar-event"></i> Attendance
        </div>
        <h1>Class <span>Sessions</span>.</h1>
        <p class="text-muted">Select an active session to mark your attendance.</p>
      </div>
    </div>

    <div class="row g-4">
      <% if @class_sessions.any? %>
        <% @class_sessions.each do |session| %>
          <div class="col-md-6 col-lg-4">
            <div class="glass-card">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="badge <%= session.status == 'open' ? 'bg-success' : 'bg-secondary' %> rounded-pill px-3">
                  <%= session.status.titleize %>
                </span>
                <span class="text-muted small"><%= session.date.strftime("%B %d, %Y") %></span>
              </div>
              <h3 class="h5 fw-bold mb-3"><%= session.name || "Daily Session" %></h3>
              
              <% if session.status == 'open' %>
                <%= button_to class_session_attendances_path(session), class: "btn btn-primary w-100 py-3 rounded-4 fw-bold d-flex align-items-center justify-content-center gap-2" do %>
                  <i class="bi bi-check2-circle"></i> Mark Attendance
                <% end %>
              <% else %>
                <button class="btn btn-outline-secondary w-100 py-3 rounded-4 disabled" disabled>
                  Window Closed
                </button>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-12">
          <div class="glass-card text-center py-5">
            <i class="bi bi-calendar-x display-1 text-muted mb-4 opacity-25"></i>
            <h2 class="h4 fw-bold">No sessions found</h2>
            <p class="text-muted">Stay tuned! Your instructor will open the attendance window soon.</p>
            <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-outline-primary px-5 rounded-pill mt-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
