<div class="row justify-content-center">
  <div class="col-lg-10 col-xl-8">
    
    <div class="mb-4 mt-4">
      <%= link_to lectures_path, class: "text-decoration-none text-muted fw-bold small" do %>
        <i class="bi bi-arrow-left me-1"></i> Back to Lectures
      <% end %>
    </div>

    <!-- Lecture Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <div class="text-muted fw-bold text-uppercase mb-2 small">
          Week <%= @lecture.week %> â€¢ <%= @lecture.date.strftime("%A, %B %d, %Y") %>
        </div>
        <h2 class="fw-bold mb-3"><%= @lecture.title %></h2>
        
        <div class="d-flex align-items-center gap-2">
          <%= image_tag @lecture.teacher.avatar_url, class: "rounded-circle", style: "width: 24px; height: 24px;" %>
          <span class="text-muted small fw-bold">Taught by <%= @lecture.teacher.first_name %> <%= @lecture.teacher.last_name %></span>
        </div>
      </div>
      <div>
        <button class="btn btn-primary fw-bold px-4 py-2"><i class="bi bi-play-circle me-2"></i>Watch Replay</button>
      </div>
    </div>

    <!-- Lecture Video Placeholder -->
    <div class="card shadow-sm border-0 mb-4" style="border-radius: 12px; overflow: hidden; background-color: #000;">
      <div class="d-flex align-items-center justify-content-center" style="height: 480px;">
        <div class="text-center text-white opacity-50">
          <i class="bi bi-play-circle fs-1 mb-2 d-block"></i>
          <h5 class="fw-bold">Video Player Placeholder</h5>
          <p class="small">The recorded lecture goes here.</p>
        </div>
      </div>
    </div>

    <!-- Lecture Resources -->
    <div class="card shadow-sm border-0 mb-5" style="border-radius: 12px;">
      <div class="card-body p-4">
        <h5 class="fw-bold mb-4">Resources</h5>
        
        <div class="list-group list-group-flush">
          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center py-3 border-0 border-bottom px-0">
            <div class="bg-primary bg-opacity-10 text-primary rounded d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px;">
              <i class="bi bi-file-earmark-slides fs-5"></i>
            </div>
            <div>
              <div class="fw-bold">Lecture Slides</div>
              <div class="text-muted small"><%= @lecture.slide_count %> slides (PDF)</div>
            </div>
          </a>
          <a href="#" class="list-group-item list-group-item-action d-flex align-items-center py-3 border-0 px-0">
            <div class="bg-dark bg-opacity-10 text-dark rounded d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px;">
              <i class="bi bi-github fs-5"></i>
            </div>
            <div>
              <div class="fw-bold">Livecode Repository</div>
              <div class="text-muted small">GitHub</div>
            </div>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
