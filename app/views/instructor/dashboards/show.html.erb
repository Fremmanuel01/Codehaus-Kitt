<div class="dashboard-container">
  <div class="container-fluid">
    <!-- Header -->
    <div class="welcome-section d-flex justify-content-between align-items-end">
      <div>
        <div class="module-badge mb-3">
          <i class="bi bi-shield-lock"></i> Instructor Portal
        </div>
        <h1>Portal <span>Management</span>.</h1>
        <p class="text-muted">Review submissions, manage lectures, and track attendance.</p>
      </div>
      <div class="d-none d-md-block text-end">
        <p class="mb-1 fw-bold"><%= Date.today.strftime("%A, %B %d") %></p>
        <span class="badge bg-primary px-3 py-2 rounded-pill">Staff Access</span>
      </div>
    </div>

    <!-- Management Cards -->
    <div class="row g-4 mb-5">
      <div class="col-md-4">
        <%= link_to instructor_lectures_path, class: "glass-card action-card py-4" do %>
          <div class="action-icon accent-blue">
            <i class="bi bi-person-video3"></i>
          </div>
          <div class="action-content">
            <h3>My Lectures</h3>
            <p>Manage slides and video links</p>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= link_to instructor_class_sessions_path, class: "glass-card action-card py-4" do %>
          <div class="action-icon accent-orange">
            <i class="bi bi-calendar-check"></i>
          </div>
          <div class="action-content">
            <h3>Class Sessions</h3>
            <p>Open attendance windows</p>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= link_to instructor_submissions_path, class: "glass-card action-card py-4" do %>
          <div class="action-icon accent-blue">
            <i class="bi bi-check2-all"></i>
          </div>
          <div class="action-content">
            <h3>Submissions</h3>
            <p>Review student challenges</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Secondary Management -->
    <div class="row g-4">
      <div class="col-lg-6">
        <div class="glass-card">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h5 fw-bold mb-0">Direct Management</h2>
          </div>
          <div class="d-flex flex-column gap-3">
            <%= link_to instructor_attendances_path, class: "btn btn-outline-primary w-100 text-start p-3 rounded-4 d-flex align-items-center justify-content-between" do %>
              <span>Attendance Records</span>
              <i class="bi bi-arrow-right"></i>
            <% end %>
            <%= link_to instructor_challenges_path, class: "btn btn-outline-primary w-100 text-start p-3 rounded-4 d-flex align-items-center justify-content-between" do %>
              <span>Challenge Definitions</span>
              <i class="bi bi-arrow-right"></i>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="glass-card text-center d-flex flex-column align-items-center justify-content-center py-5">
          <div class="stat-icon accent-orange mb-3" style="width: 80px; height: 80px; font-size: 2.5rem;">
            <i class="bi bi-lightning"></i>
          </div>
          <h3 class="fw-bold mb-2">Ready to Teach?</h3>
          <p class="text-muted small mb-4">Ensure today's lecture slides are uploaded and the attendance window is set.</p>
          <%= link_to "Prepare Today's Session", instructor_class_sessions_path, class: "btn btn-primary px-5 py-3 rounded-pill fw-bold" %>
        </div>
      </div>
    </div>
  </div>
</div>

