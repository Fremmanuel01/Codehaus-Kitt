<div class="login-page-container">
  <!-- Left Side: Background Image -->
  <div class="login-image-side">
    <div class="position-absolute bottom-0 start-0 p-5 text-white z-2">
      <h1 class="display-4 fw-bold mb-3">Master the craft of <span>coding</span>.</h1>
      <p class="lead opacity-75">Join the next generation of world-class developers at Codehaus.</p>
    </div>
  </div>

  <!-- Right Side: Login Form -->
  <div class="login-form-side">
    <div class="login-card">
      <div class="login-logo mb-4">
        <i class="bi bi-code-square text-primary"></i>
        CODEHAUS<span>KITT</span>
      </div>

      <h2 class="fw-bold mb-1">Welcome back</h2>
      <p class="text-muted mb-4">Please enter your details to sign in.</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-4" }) do |f| %>
        <div class="form-floating mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-none border-top-0 border-start-0 border-end-0 rounded-0 bg-transparent", id: "floatingEmail", placeholder: "name@example.com" %>
          <%= f.label :email, for: "floatingEmail" %>
        </div>

        <div class="form-floating mb-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control shadow-none border-top-0 border-start-0 border-end-0 rounded-0 bg-transparent", id: "floatingPassword", placeholder: "Password" %>
          <%= f.label :password, for: "floatingPassword" %>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label text-muted small" %>
            </div>
          <% end %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-decoration-none small text-primary fw-bold" %>
          <% end %>
        </div>

        <div class="d-grid">
          <%= f.submit "Sign In", class: "btn btn-login py-3 rounded-3" %>
        </div>
      <% end %>

      <div class="mt-5 text-center">
        <p class="text-muted small">Don't have an account? 
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Contact us to join", "#", class: "text-decoration-none text-primary fw-bold" %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>

