<div class="login-page-container">
  <!-- Left Side: Background Image -->
  <div class="login-image-side">
    <div class="position-absolute bottom-0 start-0 p-5 text-white z-2">
      <h1 class="display-4 fw-bold mb-3">Secure your <span>future</span>.</h1>
      <p class="lead opacity-75">Recover your access to the Codehaus learning platform.</p>
    </div>
  </div>

  <!-- Right Side: Reset Password Form -->
  <div class="login-form-side">
    <div class="login-card">
      <div class="login-logo mb-4">
        <i class="bi bi-shield-lock text-primary"></i>
        CODEHAUS<span>KITT</span>
      </div>

      <h2 class="fw-bold mb-1">Forgot password?</h2>
      <p class="text-muted mb-4">Enter your email and we'll send you reset instructions.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-floating mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow-none border-top-0 border-start-0 border-end-0 rounded-0 bg-transparent", id: "floatingEmail", placeholder: "name@example.com" %>
          <%= f.label :email, for: "floatingEmail" %>
        </div>

        <div class="d-grid mb-4">
          <%= f.submit "Send Instructions", class: "btn btn-login py-3 rounded-3" %>
        </div>
      <% end %>

      <div class="mt-5 text-center">
        <p class="text-muted small">Remembered your password? 
          <%= link_to "Sign In", new_session_path(resource_name), class: "text-decoration-none text-primary fw-bold" %>
        </p>
      </div>
    </div>
  </div>
</div>

